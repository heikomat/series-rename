{
  "typingOptions": {
    "enableAutoDiscovery": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2019"],
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "./dist/declarations",
    "sourceMap": true,
    "experimentalDecorators": true,
    "composite": true,
    "esModuleInterop": true
  }
}
